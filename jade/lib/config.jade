include mixin

form.row(method="POST")
  fieldset.col-md-3
    legend Main Settings
    +frm_input('Device Name', 'name' )
    +frm_input('Change Admin password', 'password' )
    button.btn.btn-default(type='submit') Submit

  fieldset.col-md-3
    legend WiFi Station Settings
    +frm_input('SSID', 'ssid' )
    +frm_input('WPA key', 'key' )
    button.btn.btn-default(type='submit') Submit


  fieldset.col-md-3
    legend WiFi Access Point Settings
    +frm_input('WPA AP mode key', 'key' )
    +frm_input('ESP ip', 'espip' )
    +frm_input('ESP gw', 'espgateway' )
    +frm_input('ESP Subnet', 'espsubnet' )
    +frm_input('ESP DNS', 'espdns' )
    button.btn.btn-default(type='submit') Submit

  fieldset.col-md-3
    legend MQTT
    +frm_input('MQTT hostname', 'controllerhostname' )
    +frm_input('MQTT ip', 'controllerip' )
    +frm_input('MQTT port', 'controllerport' )
    +frm_input('MQTT user', 'controlleruser' )
    +frm_input('MQTT pass', 'controllerpassword' )
    button.btn.btn-default(type='submit') Submit