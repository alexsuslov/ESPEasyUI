include mixin

- var gpios = [-1, 0, 2, 4, 5, 9, 10, 12, 13, 14, 15, 16];
- var labels = ["", 'PIO-0', 'PIO-2', 'PIO-4', 'PIO-5', 'PIO-9', 'GPIO-10', 'GPIO-12', 'GPIO-13', 'GPIO-14', 'GPIO-15', 'GPIO-16'];

mixin pinState(id)
  +label Pin mode #{id} :
    select.form-control
      option(value="0") Default
      option(value="1") Output Low
      option(value="2") Output High


form.row(method="POST")
  fieldset.col-md-3
    legend IÂ²C
    +label SDA:
      select.form-control
        for gpio, i in gpios
          option(value=gpio)= labels[i]
    +label SCL:
      select.form-control
        for gpio, i in gpios
          option(value=gpio)= labels[i]
    button.btn.btn-default(type='submit') Submit

  fieldset.col-md-3
    legend Pin state
    for gpio in gpios
      if gpio >=0
        +pinState(gpio)

    button.btn.btn-default(type='submit') Submit

